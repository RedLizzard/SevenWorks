{{#each entries}}
<div class="card card-body mb-2">
    <h2>{{title}}</h2>
    <p>{{details}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/entries/edit/{{id}}">Edit</a>
    <form action="/entries/{{id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>

{{else}}
<p>No entries listed</p>
{{/each}}